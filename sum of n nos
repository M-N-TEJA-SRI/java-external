import java.util.Scanner;
class A {
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      int n=sc.nextInt();
      System.out.println((n*(n+1))/2);
    }
}
output
10 
55
import java.util.Scanner;
class A {
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      int n=sc.nextInt();
     int i,sum=0;
     for(i=1;i<=n;i++)
     {
         sum+=i;
     }
     System.out.println(sum);
    }
}
